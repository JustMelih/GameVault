@model IEnumerable<GameVault.Models.VideoGames>
@{
    Layout = "_Layout"; ViewData["Title"] = "All Games";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-info">🎮 Video Games</h1>
    <a asp-controller="VideoGames" asp-action="Create" class="btn btn-warning btn-lg shadow">
        + Add New Game
    </a>
</div>

<table class="table table-hover table-bordered align-middle admin-table shadow-sm">
    @Html.AntiForgeryToken()
    <thead>
        <tr><th>Title</th><th>Image</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Title</td>
                <td>
                    <img src="@g.ImageUrl" alt="@g.Title" class="game-image" />
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@g.Id" class="btn btn-sm btn-outline-warning">View</a>
                        <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@g.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>