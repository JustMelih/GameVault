@model OyunIndirCom.Models.VideoGames
@{
    Layout = "_Layout"; ViewData["Title"] = "Delete Game";
}

<h1>Delete Game</h1>
<p>Are you sure you want to delete <strong>@Model.Title</strong>?</p>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>