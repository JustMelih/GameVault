@model IEnumerable<GameVault.Models.VideoGames>
@{
    Layout = "_Layout"; ViewData["Title"] = "All Games";
    var currentSort = (string)ViewData["CurrentSort"] ?? "";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="top-categories d-flex flex-wrap justify-content-between mb-4 text-center">
    <a asp-controller="Home" asp-action="GameGallery" asp-route-sort="newest"
       class="top-category-link">
        <h3 class="bg-dark p-3 rounded shadow-sm text-warning h-100 @(currentSort == "newest" ? "border border-3 border-danger" : "")">
            <div>NEWEST</div>
            <div>GAMES</div>
        </h3>
    </a>
    <a asp-controller="Home" asp-action="GameGallery" asp-route-sort="toprated"
       class="top-category-link">
        <h3 class="bg-dark p-3 rounded shadow-sm text-warning h-100 @(currentSort == "toprated" ? "border border-3 border-danger" : "")">
            <div>TOP</div>
            <div>RATED</div>
        </h3>
    </a>
    <a asp-controller="Home" asp-action="GameGallery" asp-route-sort="mostdownloaded"
       class="top-category-link">
        <h3 class="bg-dark p-3 rounded shadow-sm text-warning h-100 @(currentSort == "mostdownloaded" ? "border border-3 border-danger" : "")">
            <div>MOST</div>
            <div>DOWNLOADED</div>
        </h3>
    </a>
    <a asp-controller="Home" asp-action="GameGallery" asp-route-sort="editorschoice"
       class="top-category-link">
        <h3 class="bg-dark p-3 rounded shadow-sm text-warning h-100 @(currentSort == "editorschoice" ? "border border-3 border-danger" : "")">
            <div>EDITOR'S</div>
            <div>CHOICES</div>
        </h3>
    </a>
</div>

<div class="game-gallery d-flex flex-wrap justify-content-start gap-2 mb-5">
    @foreach (var game in Model)
    {
        <a href="/VideoGames/Details/@game.Id" class="game-card">
            <img src="@game.ImageUrl" class="game-img" alt="@game.Title">
        </a>
    }
</div>


