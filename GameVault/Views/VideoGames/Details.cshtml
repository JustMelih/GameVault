@model GameVault.Models.VideoGames
@{
    Layout = "_Layout"; ViewData["Title"] = "Game Details";
}

<h1>@Model.Title</h1>
<img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid mb-3" />
@Html.AntiForgeryToken()

<p><strong>ID:</strong> @Model.Id</p>
<p><strong>DESCRIPTION:</strong> @Model.Description</p>
<p><strong>GENRE:</strong> @Model.GameType</p>
<p><strong>SIZE:</strong> @Model.GameSize</p>
<p><strong>RELEASE DATE:</strong> @Model.ReleaseDate.ToShortDateString()</p>
<p><strong>DOWNLOADS:</strong> @Model.Downloads</p>



<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-link">Back to list</a>